<div id="cswclient">
    <fieldset>
        <legend>mdscan - vérification des services de découverte</legend>
        <form name="theForm" method="POST" action="javascript:void(csw_client.getRecords())">
            <!-- insertion des services csw -->
            <span id="csw-hosts"></span>
            <input id="cswhost" name="cswhost" />
            <br />
            <br />

            <!-- criteres de recherche -->
            <select name="queryable" title="portée de recherche">
                <option value="anytext" selected="selected">Tous champs</option>
                <option value="title">Titre</option>
                <option value="subject">Sujet</option>
            </select>
            <select name="operator" title="opérateur de recherche">
                <option value="contains">contient</option>
                <option value="equals">égal à</option>
            </select>
            <input type="text" name="query" value="" size="24" title="texte à rechercher"/>
            <input type="button" value="Rechercher" onClick="javascript:void(csw_client.getRecords())" title="rechercher" />
            <input type="button" value="Effacer" onClick="javascript:void(csw_client.clearPage())" title="effacer" />
            <br />
            <br />

            <!-- mode d'affichage des résulats -->
            <label for="schema">métadonnées</label>
            <select id="schema" name="schema" title="schéma d'affichage des métadonnées">
                <option value="http://www.opengis.net/cat/csw/2.0.2">enregistrement CSW</option>
                <option value="http://www.isotc211.org/2005/gmd" selected="selected">document ISO19139</option>
            </select>
            <label for="dislaymode">affichage</label>
            <select id="dislaymode" name="displaymode" title="mode d'affichage">
                <option value="html">HTML</option>
                <option value="xml">XML</option>
            </select>

            <label for="sortby">tri</label>
            <select id="sortby" name="sortby" title="mode de tri">
                <option value="none">Non trié</option>
                <option value="title" selected="selected">Trié par Titre</option>
            </select>
            <br />
            <br />

            <input type="checkbox" id="checkDebug" title="afficher les informations de déboguage" />
            <label for="checkDebug">
                <span class="md-test debug nohide">déboguage</span>
            </label>
            <input type="checkbox" id="checkInfo" title="afficher les informations" />
            <label for="checkInfo">
                <span class="md-test info nohide">information</span>
            </label>
            <input type="checkbox" id="checkWarning" checked="checked" title="afficher les avertissements" />
            <label for="checkWarning">
                <span class="md-test warning nohide">avertissement</span>
            </label>
            <input type="checkbox" id="checkError" checked="checked" title="afficher les erreurs" />
            <label for="checkError">
                <span class="md-test error nohide">erreur</span>
            </label>
            <input type="checkbox" id="checkCritical" checked="checked" title="afficher les erreurs critiques" />
            <label for="checkCritical">
                <span class="md-test critical nohide">erreur critique</span>
            </label>
        </form>
    </fieldset>


    <!-- resultats -->
    <div id="results-container">
        <div  class="csw-main2" id="results">
            <div class="csw-contents">
                <div id="csw-output">
                </div>
            </div>
        </div>
    </div><!-- resultats -->


    <!-- credits -->
    <div class="credits">
        mdscan is based on <a href="http://www.gdsc.nl/gdsc/en/tools/simple_csw_client">software developed by the National Aerospace Laboratory (NLR)</a>.
        <br />
        mdscan is part of the <a href="http://www.georchestra.org/">geOrchestra project</a>.
    </div><!-- credits -->

    <!-- popups -->
    <div class="apple-overlay" id="overlay">
    </div>
    <!-- popups -->
    <div id="popup">
        <div class="close">
            <a href="javascript:void(csw_client.hideDiv(document.getElementById('popup')))">[close]</a>
        </div>
        <div id="popup2">
            <div class="csw-content2">
                <div id="metadata">
                </div>
            </div>
        </div>
    </div><!-- popups -->

</div><!-- cswclient -->
